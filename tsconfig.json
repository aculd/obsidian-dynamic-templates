{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "main.ts",
    "Template.ts",
    "modals.ts",
    "errors.ts",
    "Scripts/*.ts"
  ],
  "exclude": [
    "test-vault",
    "tests",
    "node_modules"
  ]
} 